pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Print info') {
      steps {
        script {
          def branchName = env.CHANGE_BRANCH ?: env.BRANCH_NAME
          def changeId = env.CHANGE_ID ?: ''
          echo "Branch: ${branchName}"
          if (changeId) {
            echo "This is a Pull Request (ID: ${changeId}), target: ${env.CHANGE_TARGET}"
          } else {
            echo "This is a branch build"
          }
        }
      }
    }

    stage('Prepare') {
      steps {
        bat '''
          echo Workspace: %CD%
          where msys2_shell.cmd
        '''
      }
    }

    stage('Build using build.bat') {
      steps {
        bat '''
          echo Running build.bat ...
          call build.bat
        '''
      }
    }

    stage('Archive Artifacts') {
      steps {
        // Change this to your actual output folder
        archiveArtifacts artifacts: 'build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo "Pipeline finished successfully"
    }
    failure {
      echo "Pipeline failed â€” check console log"
    }
  }
}
