pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        // Use the SCM that triggered this job (Multibranch / PR / branch)
        checkout scm
      }
    }

    stage('Print info') {
      steps {
        script {
          // For pull requests Jenkins exposes CHANGE_* env vars
          def branchName = env.CHANGE_BRANCH ?: env.BRANCH_NAME
          def changeId = env.CHANGE_ID ?: ''
          echo "Branch: ${branchName}"
          if (changeId) {
            echo "This is a Pull Request (ID: ${changeId}), target: ${env.CHANGE_TARGET}"
          } else {
            echo "This is a branch build"
          }
        }
      }
    }

    stage('Build') {
      steps {
        echo "Run your build here"
      }
    }
  }
}
